.container2 {
  display: grid;
  grid-template-columns: repeat(1, 100px);
  grid-gap: 80px;
  background: #0d0c2d;
  width: 1000px;
  box-shadow: -5px -5px 8px rgba(94, 104, 121, 0.288),
              4px 4px 6px rgba(94, 104, 121, 0.288);
  padding: 60px;
  margin: auto 0;
}

@@media (min-width: 420px) and (max-width: 659px) {
  .container2 {
    grid-template-columns: repeat(4 160px);
  }
}

@@media (min-width: 660px) and (max-width: 899px) {
  .container2 {
    grid-template-columns: repeat(4, 160px);
  }
}

@@media (min-width: 900px) {
  .container2 {
    grid-template-columns: repeat(4, 160px);
  }
}

.container2 .box {
  width: 100%;
  border: 2px solid green;
}

.container2 .box h2 {
  display: block;
  text-align: center;
  color: #fff;
}

.container2 .box .chart {
  position: relative;
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 40px;
  line-height: 160px;
  height: 160px;
  color: #fff;
}

.container2 .box canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  width: 100%;
}

  </style>

<body>

<div class="container2">
  <div class="box">
    <div class="chart" data-percent="90" >90%</div>
    <h2>HTML</h2>
  </div>
  <div class="box">
    <div class="chart" data-percent="72" >72%</div>
    <h2>CSS</h2>
  </div>
  <div class="box">
    <div class="chart" data-percent="81" >81%</div>
    <h2>JAVASCRIPT</h2>
  </div>
    <div class="box">
        <div class="chart" data-percent="81">81%</div>
        <h2>JAVASCRIPT</h2>
    </div>
</div>

<script type="text/javascript">
  $(function() {
  $('.chart').easyPieChart({
    size: 160,
    barColor: "#36e617",
    scaleLength: 0,
    lineWidth: 15,
    trackColor: "#525151",
    lineCap: "circle",
    animate: 2000,
  });
});
</script>
</body>

